/****************************************************************************
* 名	称：ADS1246_rw()
* 功	能：ADS1246 spi 读写操作
* 入口参数：无
* 出口参数：无
* 说	明：无
****************************************************************************/
static void ADS1246_PwInit()
{
#ifndef	ADRESET
	//使用RESET命令
	uint8 tmp;
	SetLo(ADCS);
	spi_rw(ADS1246_RESET);
	SetHi(ADCS);	
	//延时0.6ms
	spi_rw(ADS1246_PO_INIT);
	OSTimeDly(1);	
#else
	//使用RESET信号线
	SetLo(ADRESET);		
	OSTimeDly(1);		//ADRESET下跳延时10ms
	SetHi(ADRESET);
#endif
}

/****************************************************************************
* 名	称：ADS1246ReadReg()
* 功	能：ADS1246读写寄存器
* 入口参数：无
* 出口参数：无
* 说	明：无
****************************************************************************/
static void ADS1246RWReg(uint8 nReg,uint8 nLen,uint8 *pReg,BOOL bRW)
{
	uint8 i;
	if(BWRITE == bRW) nReg |= ADS1246_WREG;
	else if(BREAD == bRW) nReg |= ADS1246_RREG;
	
	SetLo(ADCS);
	spi_rw(nReg);
	spi_rw(nLen);
	for(i=0;i<nLen;i++)
	{
		if(BWRITE == bRW)
		{
			spi_rw(*(pReg+i));
		}
		else if(BREAD == bRW)
		{
			*(pReg+i) = spi_rw(ADS1246_NOP);
		}
	}
	SetHi(ADCS);
}

/****************************************************************************
* 名	称：ADS1246PortInit()
* 功	能：ADS1246初始化函数
* 入口参数：无
* 出口参数：无
* 说	明：无
****************************************************************************/
void ADS1246PortInit() reentrant
{
	MakePushPull(ADPWEN);
	MakePushPull(ADRESET);
	MakePushPull(ADCS);
	MakeOpenDrain(ADRDY);
	MakePushPull(ADSTART);
	MakePushPull(POWER_CH1);

	ADS1246_POWER_OFF();		//关闭AD电源
	ADSENSOR_POWER_OFF();	//关闭传感器电源
	
	//中断初始化
	IT1 = 0;					//电平触发
	IT01CF &= 0x0F;				//低电压有效
	IT01CF |= (GetBitValue(ADRDY) << 4);
	EX1 = 0;					//关闭中断

	SetHi(ADRESET);
	SetHi(ADCS);
	SetLo(ADRDY);
	SetLo(ADSTART);
}
